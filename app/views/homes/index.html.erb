<div class="col-12 mt-4">
  <div class="card mb-4">
    <div class="card-header pb-0 p-3">
      <h6 class="mb-1">Comedy</h6>
      <p class="text-sm">Movies</p>
    </div>
    <div class="card-body p-3">
      <div class="row">
        <div class="col-12" style="overflow-x: auto;">
          <div class="card-container d-flex"  style="overflow-x: auto; white-space: nowrap;">
            <% @comedies.each do |comedy| %>
              <div class="col-xl-3 col-md-6 mb-xl-0 mb-4" style="display: inline-block;">
                <div class="card card-blog card-plain" style="display: inline-block; margin-right: 10px;">
                  <div class="position-relative">
                    <a class="d-block shadow-xl border-radius-xl" style="height: 300px; width: 200px; display: block;">
                      <img src="<%= comedy.image %>" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl" style="width: 100%; height: 100%; object-fit: cover;">
                    </a>
                  </div>
                  <div class="card-body px-1 pb-0">
                    <p class="text-gradient text-dark mb-2 text-sm">Running Time: <%= comedy.TMovie_length %> mins</p>
                    <a href="javascript:;">
                      <h5>
                        <%= comedy.TMovie_title %>
                        <% comedy.favorite %>
                      </h5>
                    </a>
<!--                    <p class="mb-4 text-sm">-->
                      <%#= comedy.TMovie_actors %>
<!--                    </p>-->
                    <div class="d-flex align-items-center justify-content-between">
                      <button type="button" class="btn btn-outline-primary btn-sm mb-0">Watch</button>
                      <div class="avatar-group mt-2">
                        <a href="/homes/<%= comedy.TMovie_id %>/favourites" >
                          <i class="fa <% if comedy.favorite %>fa-heart text-danger <% else %> fa-heart-o <% end %> cursor-pointer"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

